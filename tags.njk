---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /tags/{{ tag | capitalize }}/
layout: layouts/base.njk
renderData:
  title: "Tagged “{{ tag }}”"
---

<h1>Tag: {{ tag }}</h1>

{% set postslist = collections[ tag ] %}
{% include "components/postslist.njk" %}

<nav>
  <a href="{{ '/news/' | url }}">← Back to News</a>
</nav>